<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs", {cssSheet: "registerLogin_style", title: "Página Register"}) %>
<body>

    <%- include("./partials/header.ejs") %>
    
    <%- include("./partials/header2.ejs") %>

<main>
    
<article class="contenedor">
    <!--Imagen hardcodeada-->
        <img src="/img/Imagen_register.png" alt="Imagen de perro y gato" class="tamano-imagen">
    <!--Registro-->
    <form class="formulario" action="/users/edit/<%= userToEdit.id %>?_method=PUT" method="POST">
        <div class="centrado">
            <h2>Edita tus datos</h2>

            <div>
                <!-- muestra los datos del usuario -->
                <% if(locals.userToEdit){ %>
    
                    <h3 style="color: blue; font-size: 16px;" >Bienvenido: <%= userToEdit.nombre %> <%= userToEdit.apellido %></h3>
                    <h3 style="color: blue; font-size: 16px;" >Tu email es <%= userToEdit.email %></h3>
    
                <% } %>

            </div>
            
           <!--Input Nombre-->
           <p class="titulo">Nombre:</p>
           <input class="<%= (locals.errors && locals.errors.nombre) ? 'input_error' : '' %>" type="text" name="nombre" id="nombre" placeholder="Ingresa tu nombre" value="<%= userToEdit.nombre %>%>">
           <% if (locals.errors && locals.errors.nombre) { %>
               <label class="error" ><%= errors.nombre.msg %></label>
           <% } %>

            <!--Input Apellido-->
            <p class="titulo">Apellido</p>
            <input class="<%= (locals.errors && locals.errors.apellido) ? 'input_error' : '' %>"type="text" name="apellido" id="apellido" placeholder="Ingresa tu apellido" value="<%= userToEdit.apellido %>">
            <% if (locals.errors && locals.errors.apellido) { %>
                <label class="error" ><%= errors.apellido.msg %></label>
            <% } %>
            
            <!--Input email-->
            <p class="titulo">Email</p>
            <input class="<%= (locals.errors && locals.errors.email) ? 'input_error' : '' %>" type="email" name="email" id="email" placeholder="Ingresa tu mail para el registro" class="input1" value="<%= userToEdit.email %>">
            <% if (locals.errors && locals.errors.email) { %>
                <label class="error" ><%= errors.email.msg %></label>
            <% } %>

            <!--Input contraseña-->
            <p class="titulo">Contraseña</p>
            <input class="<%= (locals.errors && locals.errors.password) ? 'input_error' : '' %>" type="password" name="password" id="password" placeholder="Ingresa una contraseña" class="input1" value="<%= userToEdit.password %>">
            <% if (locals.errors && locals.errors.email) { %>
                <label class="error" ><%= errors.password.msg %></label>
            <% } %>

                <!--Input -->
            <p class="titulo">Reingresar contraseña</p>
            <input class="<%= (locals.errors && locals.errors.password) ? 'input_error' : '' %>" type="password" name="passwordrepeat" id="password" placeholder="Reingresa la contraseña" class="input1" value="<%= userToEdit.passwordrepeat %>">
            <% if (locals.errors && locals.errors.email) { %>
                <label class="error" ><%= errors.password.msg %></label>
            <% } %>

            <button type="submit">Guardar cambios</button>


        </div>
    </form>
</article>

</main>

<%- include("./partials/footer.ejs") %>
    
</body>
</html>