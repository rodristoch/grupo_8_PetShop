<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs", {cssSheet: "categoria", title: "Página Categoría"}) %>
<body>

    <%- include("./partials/header.ejs") %>

    <%- include("./partials/header2.ejs") %>
    
    <main>
        <!-- Odenar y filtros para celular-->
        <article class="cantidad-producto">
            <p>1.090 resultados</p>
            <section class="flex-enlinea">
                <button class="btn-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3 7.5L7.5 3m0 0L12 7.5M7.5 3v13.5m13.5 0L16.5 21m0 0L12 16.5m4.5 4.5V7.5" />
                    </svg>
                    Ordenar
                </button>
                <button class="btn-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 3c2.755 0 5.455.232 8.083.678.533.09.917.556.917 1.096v1.044a2.25 2.25 0 01-.659 1.591l-5.432 5.432a2.25 2.25 0 00-.659 1.591v2.927a2.25 2.25 0 01-1.244 2.013L9.75 21v-6.568a2.25 2.25 0 00-.659-1.591L3.659 7.409A2.25 2.25 0 013 5.818V4.774c0-.54.384-1.006.917-1.096A48.32 48.32 0 0112 3z" />
                    </svg>
                    Filtro  
                </button>
            </section>
        </article>
    

        <!-- menú ordenar-->
        <article class="seccion-menu-ordenar">
            <section class="menu-ordenar">
                <section class="flex-linea-close">
                    <h2>Ordenar</h2>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </section>
            
        
                <section class="contendor_opciones">
                    <article class="ordenar">
                        <div class="opciones">
                            <input type="radio" name="ordenar">
                            <p>Relevancia</p>
                        </div>
                        <div class="opciones">
                            <input type="radio" name="ordenar">
                            <p>Más nuevo</p>
                        </div>
                        <div class="opciones">
                            <input type="radio" name="ordenar">
                            <p>Precio: más económico primero</p>
                        </div>
                        <div class="opciones">
                            <input type="radio" name="ordenar">
                            <p>Precio: más caro primero</p>
                        </div>
                    
                    </article>
                </section>
            </section>
        </article>

        <!--  armar menú Filtro-->

        <!-- Lista productos-->
    
        <div class="lista">
            <% for(let accesorio of productosGato) { %>

                <article class="articulo-productos-descuentos">
                    <a href="/productos/detalle"><img class="img-productos-descuentos" src="/img/productos/<%= accesorio.image %>" alt="imagen_producto"></a>
                    <div class="descripcion-productos-descuentos">
                        <h4><%= accesorio.name %></h4>
                        <p class="descripcion"><%= accesorio.description %></p>
                        <% if (accesorio.discount=="Si") { %>
                            <p class="precio-tachado">$ <%= accesorio.price %></p>
                            <p class="descuento">20% off</p>
                            <p class="precio"><%= Number((accesorio.price*0.8).toFixed(2)) %></p>
                        <% } else { %>
                            <p class="precio">$ <%= accesorio.price %></p>
                        <% } %>
                        <div class="div-boton-comprar">
                            <button class="boton-comprar" type="submit">Agregar</button>
                        </div>
                    </div>
                </article>

            <% } %>
        </div>
        <!-- Fin Lista productos-->
    </main>

    <%- include("./partials/footer.ejs") %>

</body>
</html>